<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">

        <title>{% block title %}e-Feng Shui{% endblock %}</title>

        {{ encore_entry_link_tags("app") }}
        {% block stylesheets %}{% endblock %}

    </head>

    <header>
        <nav class="main-navigation">


            <!-- Logo et sloggan -->

            <a ref="#" class="nav-link"><img src="/img/logo.png" atl="logo efeng shui"></a>
        <h1>Plateforme de diagnostic Feng Shui en ligne</h1>
        </div>
       </nav>
            <div class="row">
                <nav class="col-lg-10">
                    <div class="navbar-logo">
                        <a ref="#" class="nav-link"><img src="/img/logo.png" atl="logo efeng shui"></a>
                        <h1>{% trans %}Online Feng Shui Diagnostic Platform{% endtrans %}</h1>
                     </div>
                </nav> 
            </div>

            <div class="icones">

                <!-- Icone "Choix de la langue"-->

                <div class="dropdown">
                    {% for locale in locales %} 
                        {% if locale != app.request.locale %}
                            <a href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-globe fa-2x"></i>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" href="{{ path('change_locale', {'locale': locale}) }}">{{ locale == 'en'? "anglais" : "français"  }}</a>
                            </div>
                        {% endif %} 
                    {% endfor %}    
                </div>
       
                <!-- Icone "Inscription/Mon compte/Déconnexion"-->

                <div class="dropdown">
                    <a href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-user-circle fa-2x"></i>
                    </a>
                


                    <!-- Si PAS CONNECTé-->

                    {% if not is_granted("IS_AUTHENTICATED_FULLY") %}

                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <a class="dropdown-item" href="{{ path("app_login") }}">{% trans %}Login{% endtrans %}</a>
                            <a class="dropdown-item" href="{{ path("user_subs") }}">{% trans %}Subscribe{% endtrans %}</a>
                        </div>

                    {% endif %}


                    <!-- Si connecté en tant que USER-->

                    {% if is_granted("IS_AUTHENTICATED_FULLY") %}

                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <a class="dropdown-item" href="{{ path("compte_user") }}">{% trans %}My account{% endtrans %}</a>
                            <a class="dropdown-item" href="{{ path("app_logout") }}">{% trans %}Logout{% endtrans %}</a>
                        </div>

                    {% endif %}

                    <!-- Siconnecté en tant qu'ADMIN-->

                    {% if is_granted("ROLE_ADMIN") %}

                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <a class="dropdown-item" href="{{ path("gestion") }}">{% trans %}My account{% endtrans %}</a>
                            <a class="dropdown-item" href="{{ path("accueil") }}">{% trans %}List of{% endtrans %}</a>
                            <a class="dropdown-item" href="{{ path("accueil") }}">{% trans %}List of requests{% endtrans %}</a>
                            <a class="dropdown-item" href="{{ path("accueil") }}">{% trans %}List of diagnostics{% endtrans %}</a>
                            <a class="dropdown-item" href="{{ path("accueil") }}">{% trans %}Logout{% endtrans %}</a>
                        </div>

                    {% endif %}

                </div>

            </div>

            <!-- Barre de Menu -->

            <ul class="nav-list">
                <li class="nav-list-item">
                    <a href="{{ path('accueil') }}" class="nav-link">{% trans %}Home{% endtrans %}</a>
                </li>
                <li class="nav-list-item">
                    <a href="{{ path('criteres') }}" class="nav-link">{% trans %}Diagnostic{% endtrans %}</a>
                </li>
                <li class="nav-list-item">
                    <a href="{{ path('fengshui') }}" class="nav-link">{% trans %}Feng Shui{% endtrans %}</a>
                </li>
                <li class="nav-list-item">
                    <a href="{{ path('faq') }}" class="nav-link">{% trans %}F.A.Q{% endtrans %}</a>
                </li>
            </ul>

        </nav>

    </header>

    <body>

    {% block body %}

       {% for type, messages in app.flashes %}
            <div class="alert alert-{{ type }}">
                {% for message in messages %}
                    {{ message }}
                {% endfor %}
            </div>
        {% endfor %}
            
    {% endblock %}

    </body>

    <footer class="page-footer">
        <!-- Footer Links -->
        <div class="container-fluid">

            <!-- Grid row -->
            <div class="row">

                <!-- Grid column -->
                <div class="col-lg-6">

                    <!-- Content -->
                    <div class="mention">
                    <a href="#" title="mentions legales" >{% trans %}Legal notices{% endtrans %}</a><br>
                    <a href="{{ path("contact") }}" title="contactez-nous">{% trans %}Contact us{% endtrans %}</a>
                    </div>
                </div>

                <!-- Grid column -->
                <div class="col-lg-5">   

                    <!-- Newsletter -->

                    <h5 class="newsletter"{% trans %}>Newsletter{% endtrans %}</h5>
                        <form class="register-newsletter">
                            <input type="text" required="" placeholder="Enter your email">
                            <button type="submit" class="btn-search">{% trans %}Registration{% endtrans %}</button>
                        </form>

                        <!-- Icones réseaux sociaux -->

                    <div class="reseaux-sociaux">
                        <a href="https://www.facebook.com/maitre.fengshui.58"><i id="facebook" class="fab fa-facebook fa-1x"></i></a>
                        <a href="https://twitter.com/FengMaitre"><i id="twitter" class="fab fa-twitter fa-1x"></i></a>
                        <a href="https://www.instagram.com/e_fengshui_n1/"><i id="instagram" class="fab fa-instagram fa-1x"></i></a>
                        <a href="https://www.linkedin.com/in/e-feng-shui-6474331a4/"><i id="linkedin" class="fab fa-linkedin-in fa-1x"></i></a>
                        <a href="https://google.com/FengMaitre"><i id="google" class="fab fa-google-plus-g fa-1x"></i></a>
                        <a href="https://www.youtube.com/?gl=FR&tab=w11"><i id="youtube" class="fab fa-youtube fa-1x"></i></a>
                    </div>
            </div>
        </div>
    </div>
    
        <!-- Copyright -->
        <div class="footer-copyright text-center py-3">© 2020 Copyright</div>
            
        {% block javascripts %}{{ encore_entry_script_tags("app") }}{% endblock %}
        <script src="http://thecodeplayer.com/uploads/js/jquery.easing.min.js" type="text/javascript"></script>

    </footer>

</html>