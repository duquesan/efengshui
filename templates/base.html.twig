<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">

        <title>{% block title %}e-Feng Shui{% endblock %}</title>
        {{ encore_entry_link_tags("app") }}
        {% block stylesheets %}{% endblock %}

    </head>
    <header>
       <nav class="main-navigation">
      <div class="row">
       <nav class="col-lg-10">
        <div class="navbar-logo">

            <a ref="#" class="nav-link"><img src="./img/logo.png" atl="logo efeng shui"></a>
        <h1>Plateforme de diagnostic Feng Shui en ligne</h1>
        </div>
       </nav>

       <div class="col-lg-2">

       <div class="icone-langue">
            <a href="#"><i class="fas fa-globe fa-2x"></i></a>
        </div>

        <div class="dropdown">
            <a href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fas fa-user-circle fa-2x"></i>
            </a>


<!-- Si PAS CONNECTé-->
{% if not is_granted("IS_AUTHENTICATED_FULLY") %}

            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <a class="dropdown-item" href="{{ path("app_login") }}">Se connecter</a>
                <a class="dropdown-item" href="{{ path("user_subs") }}">S'inscrire</a>

            </div>


            {% endif %}


<!-- Si USER-->
{% if is_granted("IS_AUTHENTICATED_FULLY") %}


            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <a class="dropdown-item" href="{{ path("compte_user") }}">Mon compte</a>
                <a class="dropdown-item" href="{{ path("app_logout") }}">Déconnexion</a>
            </div>
            {% endif %}

<!-- Si ADMIN-->

{% if is_granted("ROLE_ADMIN") %}

            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <a class="dropdown-item" href="{{ path("gestion") }}">Mon compte</a>
                <a class="dropdown-item" href="{{ path("app_logout") }}">Déconnexion</a>
            </div>
{% endif %}

        </div>
      
        </div>
        </div>


        <ul class="nav-list">
            <li class="nav-list-item">
                <a href="{{ path('accueil') }}" class="nav-link">Accueil</a>
            </li>
            <li class="nav-list-item">
                <a href="{{ path('criteres') }}" class="nav-link">Diagnostic</a>
            </li>
            <li class="nav-list-item">
                <a href="{{ path('fengshui') }}" class="nav-link">Le Feng Shui</a>
            </li>
            <li class="nav-list-item">
                <a href="{{ path('faq') }}" class="nav-link">F.A.Q</a>
            </li>
        </ul>

    </nav>
    </header>
    <body>
       {% for type, messages in app.flashes %}
            <div class="alert alert-{{ type }}">
                {% for message in messages %}
                    {{ message }}
                {% endfor %}
            </div>
        {% endfor %}
    </body>
        {% block body %}{% endblock %}

    
        

        {% block javascripts %}{{ encore_entry_script_tags("app") }}{% endblock %}
        <script src="http://thecodeplayer.com/uploads/js/jquery.easing.min.js" type="text/javascript"></script>


</html>
