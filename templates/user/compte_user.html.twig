{% extends 'base.html.twig' %}

{% block title %} e-Feng Shui {% endblock %}

{% block body %}

<h2 class="titre">{% trans %}My account{% endtrans %}</h2>
<div class="flex-column-reverse">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">
        <h3 class="card-title">{% trans %}My diagnostics {% endtrans %}</h3>
            <table class="table table-bordered">
            <thead>
                <tr>
                    <th>{% trans %}Diagnostic number{% endtrans %}</th><th>{% trans %}Date{% endtrans %}</th><th>{% trans %}Price{% endtrans %}</th><th>{% trans %}Expertise{% endtrans %}</th><th>{% trans %}Visualiser{% endtrans %}</th>
                </tr>
            </thead>
            {% for critere in app.user.criteres %}
                <tr>
                    <td>{{ critere.diagnostic.id }}</td>
                    <td>{{ critere.diagnostic.date|date("d/m/Y") }} </td>
                    <td>{{ critere.diagnostic.prix }}</td>
                    <td><a href='../img/diagnostic.pdf' download='diactostic.pdf'><i class='fas fa-file-download'>{% trans %} Download your diagnostic{% endtrans %}</i></a></td>
                    <td><a href='#'><i class='fas fa-eye'></i></a></td>
                </tr>
            {% endfor %}
            <tfoot>>
            </tfoot>
            </table>
      </div>
    </div>
  </div>
  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">
        <h3 class="card-title">{% trans %}My informations {% endtrans %}</h3>
            <div class="form-group">
                <label for="nom">{% trans %}My ID{% endtrans %}</label>
                <input type="text" class="form-control" id="id" name="id" value="{{ app.user.id}}">
            </div>
            <div class="form-group">
                <label for="nom">{% trans %}First name{% endtrans %}</label>
                <input type="text" class="form-control" id="nom" name="nom" value="{{ app.user.nom }}">
            </div>
            <div class="form-group">
                <label for="nom">{% trans %}Name{% endtrans %}</label>
                <input type="text" class="form-control" id="prenom" name="prenom" value="{{ app.user.prenom }}">
            </div>
            <a href="{{ path("user_modifier", {id: app.user.id}) }}" class="btn btn-dark">Modifier mon compte</a>
            <a href="{{ path("user_supprimer", {id: app.user.id}) }}" class="btn btn-dark">Supprimer mon Compte</a>
      </div>
    </div>
  </div>
</div>

{% endblock %}

